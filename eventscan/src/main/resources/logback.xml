<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.lastwill" level="debug"/>
    <logger name="BtcScanner" level="DEBUG"/>
    <!--<logger symbol="org.bitcoinj" level="DEBUG"/>-->
    <!--<logger symbol="org.apache.http.wire" level="DEBUG" />-->
    <!--<logger symbol="org.apache.http" level="DEBUG" />-->
    <!--<logger symbol="org.hibernate.type" level="TRACE" />-->

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>